# =============================================================================
# THE HUB - BACKEND ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to git!

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3001
NODE_ENV=production
FRONTEND_URL=https://your-frontend.vercel.app

# =============================================================================
# DATABASE - SUPABASE
# =============================================================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Legacy aliases (for backwards compatibility)
SUPABASE_SERVICE_KEY=your-service-role-key-here
SUPABASE_KEY=your-service-role-key-here

# =============================================================================
# STRIPE PAYMENT PROCESSING
# =============================================================================
# Get these from: https://dashboard.stripe.com/test/apikeys (test mode)
# or https://dashboard.stripe.com/apikeys (live mode)
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs â€” run `node scripts/stripe-setup.js` to create these
# Or create manually at: https://dashboard.stripe.com/test/products
# Pro: $9/month or $99/year
STRIPE_PRICE_ID_PRO_MONTHLY=price_xxx
STRIPE_PRICE_ID_PRO_YEARLY=price_xxx

# =============================================================================
# TELEGRAM BOT (OPTIONAL - For notifications)
# =============================================================================
# Get bot token from: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHANNEL_ID=-1001234567890
TELEGRAM_ADMIN_CHAT_ID=your-telegram-user-id
TELEGRAM_ALERT_CHAT_ID=your-telegram-user-id
TELEGRAM_EMPIRE_CHANNEL_ID=-1001234567890
TELEGRAM_TEST_CHANNEL_ID=-1001234567890

# =============================================================================
# AUTHENTICATION (JWT)
# =============================================================================
# Generate secure random strings for these (use: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# AI SERVICES (OPTIONAL)
# =============================================================================
# OpenAI API (for AI-powered features)
OPENAI_API_KEY=sk-your-openai-key

# Anthropic Claude API (alternative to OpenAI)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
CLAUDE_MODEL=claude-3-sonnet-20240229

# =============================================================================
# EMAIL SERVICES (OPTIONAL)
# =============================================================================
# Resend (recommended for newsletters)
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_key

# Email configuration
FROM_EMAIL=noreply@yourdomain.com
NEWSLETTER_FROM_EMAIL=newsletter@yourdomain.com
NEWSLETTER_FROM_NAME=The Hub
ADMIN_EMAIL=admin@yourdomain.com

# =============================================================================
# SOCIAL MEDIA AUTO-POSTING (OPTIONAL)
# =============================================================================
# Instagram API
INSTAGRAM_ACCESS_TOKEN=your-instagram-token
INSTAGRAM_ACCOUNT_ID=your-instagram-business-account-id
INSTAGRAM_SCORE_THRESHOLD=12

# Twitter API
TWITTER_API_KEY=your-twitter-api-key

# Image hosting (for social media posts)
IMGBB_API_KEY=your-imgbb-api-key

# =============================================================================
# REDDIT INTEGRATION (OPTIONAL)
# =============================================================================
REDDIT_USERNAME=your-reddit-username
REDDIT_PASSWORD=your-reddit-password
REDDIT_DRY_RUN=true
REDDIT_MAX_COMMENTS_PER_DAY=5

# =============================================================================
# AFFILIATE PROGRAMS (OPTIONAL)
# =============================================================================
# Amazon Associates
AMAZON_AFFILIATE_TAG=your-tag-20
AMAZON_ASSOCIATE_TAG=your-tag-20
AMAZON_PARTNER_TAG=your-tag-20
AMAZON_ACCESS_KEY=your-access-key
AMAZON_SECRET_KEY=your-secret-key

# Other affiliate programs
CHRONO24_AFFILIATE_ID=your-chrono24-id
CHRONO24_REF_ID=your-ref-id
STOCKX_AFFILIATE_ID=your-stockx-id
EBAY_AFFILIATE_ID=your-ebay-id
EBAY_CAMPAIGN_ID=your-campaign-id
AWIN_AFFILIATE_ID=your-awin-id

# =============================================================================
# WEB SCRAPING SERVICES (OPTIONAL)
# =============================================================================
# ScraperAPI (for bypassing anti-bot measures)
SCRAPERAPI_KEY=your-scraperapi-key

# Apify (web automation platform)
APIFY_TOKEN=your-apify-token

# Crawlbase (alternative scraping service)
CRAWLBASE_TOKEN=your-crawlbase-token

# =============================================================================
# FEATURE TOGGLES & SCHEDULERS
# =============================================================================
# Enable/disable various background jobs
ENABLE_SCRAPER_SCHEDULER=false
ENABLE_SPORTS_SCHEDULER=false
ENABLE_SNEAKER_SCHEDULER=false
ENABLE_DEAL_SCORING_SCHEDULER=false
ENABLE_NEWSLETTER_SCHEDULER=false
ENABLE_DEAL_ALERTS=false
ENABLE_PREMIUM_ALERTS=false
ENABLE_CHANNEL_POSTER=false
ENABLE_INSTAGRAM_POSTER=false

# Scheduler intervals (cron format)
POLL_SCHEDULE=0 */6 * * *
SPORTS_SCHEDULE=0 */1 * * *
NEWSLETTER_SCHEDULE=0 9 * * 5
DEAL_SCORING_INTERVAL_MINUTES=60

# =============================================================================
# SCRAPER CONFIGURATION
# =============================================================================
USE_REAL_SCRAPERS=false
SCRAPER_RUN_ON_START=false
RUN_ON_START=false
SEND_UPDATE_SUMMARY=false

# Sports filters (comma-separated team names to exclude)
EXCLUDED_SPORTS_TEAMS=Team1,Team2

# =============================================================================
# DEBUGGING & DEVELOPMENT
# =============================================================================
DEBUG_HTML=false
DEBUG_SCREENSHOTS=false
LOG_LEVEL=info

# =============================================================================
# DISCORD INTEGRATION (OPTIONAL)
# =============================================================================
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/xxx
DISCORD_ALERT_CHANNEL_ID=channel-id

# =============================================================================
# PUSH NOTIFICATIONS (OPTIONAL)
# =============================================================================
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# =============================================================================
# OTHER SERVICES
# =============================================================================
# GitHub (for mobile coding bot)
GITHUB_TOKEN=ghp_your_github_token
GIT_USER_NAME=Your Name
GIT_USER_EMAIL=your@email.com
MOBILE_CODING_REPOS_DIR=/path/to/repos

# Internal API security
INTERNAL_API_KEY=your-internal-api-key

# File uploads
MAX_FILE_SIZE=10485760
