# ============================================
# AUTHENTICATION ENVIRONMENT VARIABLES
# ============================================
# Copy these variables to your .env file and replace with your actual values

# ============================================
# JWT Configuration
# ============================================
# IMPORTANT: Generate strong random secrets (32+ characters)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# JWT secret for access tokens (15 minute expiry)
JWT_SECRET=your-super-secret-key-minimum-32-characters-long

# JWT secret for refresh tokens (7 day expiry)
JWT_REFRESH_SECRET=another-different-super-secret-refresh-key

# Token expiration times
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# SMTP Email Configuration
# ============================================
# For Gmail: Use App Password, not regular password
# Generate at: https://myaccount.google.com/apppasswords

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password

# ============================================
# Frontend URL
# ============================================
# Used for email verification and password reset links

FRONTEND_URL=http://localhost:5173

# ============================================
# Node Environment
# ============================================
NODE_ENV=development
# NODE_ENV=production  # Use this in production for secure cookies
