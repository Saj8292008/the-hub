{
  "buildCommand": "npm install && vite build && mv dist/index.html dist/index-app.html && cp public/landing.html dist/index.html && cp public/robots.txt dist/robots.txt && cp dist/index-app.html dist/blog/index.html",
  "installCommand": "npm install",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/app", "destination": "/index-app.html" },
    { "source": "/app/(.*)", "destination": "/index-app.html" },
    { "source": "/signup", "destination": "/index-app.html" },
    { "source": "/signup/(.*)", "destination": "/index-app.html" },
    { "source": "/login", "destination": "/index-app.html" },
    { "source": "/login/(.*)", "destination": "/index-app.html" },
    { "source": "/verify-email-address", "destination": "/index-app.html" },
    { "source": "/verify-phone-number", "destination": "/index-app.html" },
    { "source": "/sso-callback", "destination": "/index-app.html" },
    { "source": "/dashboard", "destination": "/index-app.html" },
    { "source": "/dashboard/(.*)", "destination": "/index-app.html" },
    { "source": "/deals", "destination": "/index-app.html" },
    { "source": "/deals/:brand", "destination": "/index-app.html" },
    { "source": "/deals/category/:category", "destination": "/index-app.html" },
    { "source": "/blog", "destination": "/index-app.html" },
    { "source": "/blog/category/:category", "destination": "/index-app.html" },
    { "source": "/blog/admin", "destination": "/index-app.html" },
    { "source": "/blog/editor/:id", "destination": "/index-app.html" },
    { "source": "/blog/:slug.html", "destination": "/blog/$1.html" },
    { "source": "/blog/:slug", "destination": "/index-app.html" },
    { "source": "/guides/(.*)", "destination": "/guides/$1" }
  ]
}
